+include-style('personal-profile')
+include-script('personal-profile')
.personal
    .tabs-wrap
        +tabs-block-v2({
            mod: 'tabs-block-v2--align-start',
            tab: true,
            list: [
                {name: 'Мои данные', active: true},
                {name: 'Адреса доставки'}
            ]
        })
        .tabs-content(data-tab-content="1")
            .personal-contaniner
                form.bv-form.personal-form
                    .row
                        .col-md-3
                            +input({
                                fg_mod: 'form-group--margin',
                                type: 'text',
                                name: false,
                                small: false,
                                label: 'Имя',
                                required: true,
                                validation: {
                                    message: 'Заполните поле',
                                    regexp: 'Неверный формат',
                                    emailaddress: ' ',
                                    identical: false
                                }
                            })
                        .col-md-3
                            +input({
                                fg_mod: 'form-group--margin',
                                type: 'text',
                                name: false,
                                small: false,
                                label: 'Отчество',
                                required: true,
                                validation: {
                                    message: 'Заполните поле',
                                    regexp: 'Неверный формат',
                                    emailaddress: ' ',
                                    identical: false
                                }
                            })
                        .col-md-3
                            +input({
                                fg_mod: 'form-group--margin',
                                type: 'text',
                                name: false,
                                small: false,
                                label: 'Фамилия',
                                required: true,
                                validation: {
                                    message: 'Заполните поле',
                                    regexp: 'Неверный формат',
                                    emailaddress: ' ',
                                    identical: false
                                }
                            })
                    .row
                        .col-md-2
                            +custom-select({
                                default: 'Мужской',
                                fg_mod: 'form-group--margin',
                                mod: 'form-control',
                                label: 'Пол',
                                items: [
                                    {value: 1, text: 'Мужской'},
                                    {value: 2, text: 'Женский'},
                                ],
                                validation: {
                                    message: 'Заполните поле',
                                    regexp: 'Неверный формат',
                                    emailaddress: ' ',
                                    identical: false
                                },
                            })
                        .col-md-2
                            .form-control-label Дата рождения<span class="label-required">*<span>
                            +datapicker({
                                placeholder: 'Выберите дату',
                                fg_mod: '',
                                required: true,
                                value: '10.10.1994'
                            })

                    .row
                        .col-md-3
                            +custom-select({
                                default: '????????',
                                fg_mod: 'form-group--margin',
                                mod: 'form-control',
                                label: 'Уровень доступа',
                                items: [
                                    {value: 1, text: '????????'},
                                    {value: 2, text: '?'},
                                ],
                                validation: {
                                    message: 'Заполните поле',
                                    regexp: 'Неверный формат',
                                    emailaddress: ' ',
                                    identical: false
                                },
                            })
                        .col-md-3
                            +input({
                                fg_mod: 'form-group--margin',
                                type: 'text',
                                name: false,
                                small: false,
                                label: 'Должность',
                                required: true,
                                validation: {
                                    message: 'Заполните поле',
                                    regexp: 'Неверный формат',
                                    emailaddress: ' ',
                                    identical: false
                                }
                            })
                    .row
                        .col-md-3
                            +input({
                                label: 'Электронная почта',
                                type: 'email',
                                fg_mod: 'form-group--margin',
                                name: false,
                                small: false,
                                placeholder: 'example@example.com',
                                required: true,
                                pattern: '[A-Za-zА-Яа-я0-9\_\-]{1,}@[A-Za-zА-Яа-я0-9\_\-]{1,}\.[A-Za-zА-Яа-я0-9]{2,}',
                                validation: {
                                    message: 'Заполните поле',
                                    regexp: 'Неверный формат',
                                    emailaddress: ' ',
                                    identical: false
                                }
                            })
                        .col-md-3
                            +input({
                                label: 'Телефон',
                                fg_mod: 'form-group--margin',
                                type: 'tel',
                                name: false,
                                small: false,
                                placeholder: '+375 (__) ___-__-__',
                                required: true,
                                pattern: 'phone',
                                validation: {
                                    message: 'Заполните поле',
                                    regexp: 'Неверный формат',
                                    emailaddress: ' ',
                                    identical: false
                                }
                            })
                    .personal-form__submit
                        button(type="submit").btn.btn--primary
                            span Редактировать
                .row
                    .col-md-7
                        .personal-password
                            .personal-password__title Пароль
                            .personal-password__link.js-show-pass-panel
                                span Изменить пароль
                                +icon('i-fix')(style="width:24px; height:24px")
                            .personal-password__inner.hidden
                                form.bv-form.personal-form
                                    .row
                                        .col-md-5
                                            .password-wrap
                                                +input({
                                                    label: 'Введите старый пароль',
                                                    fg_mod: 'form-group--margin',
                                                    type: 'password',
                                                    name: false,
                                                    small: false,
                                                    required: true,
                                                    validation: {
                                                        message: 'Заполните поле',
                                                        regexp: 'Неверный формат',
                                                        emailaddress: ' ',
                                                        identical: false
                                                    }
                                                })

                                                .password-wrap__show-pass.js-show-pass
                                                    .password-wrap__show-pass-icon.password-wrap__show-pass-icon--show.hidden
                                                        +icon('i-show-pass-show')(style="width: 16px; height:16px")
                                                    .password-wrap__show-pass-icon.password-wrap__show-pass-icon--hide
                                                        +icon('i-show-pass-hide')(style="width: 16px; height:16px")
                                    //- .row
                                    //- 	.col
                                    //- 		a(href='#').personal-password__revise.link-decoration.link-decoration--primary Забыли пароль?
                                    .row
                                        .col-md-5
                                            .password-wrap
                                                +input({
                                                    label: 'Введите новый пароль',
                                                    fg_mod: 'form-group--margin',
                                                    type: 'password',
                                                    name: false,
                                                    small: false,
                                                    required: true,
                                                    validation: {
                                                        message: 'Заполните поле',
                                                        regexp: 'Неверный формат',
                                                        emailaddress: ' ',
                                                        identical: false
                                                    }
                                                })
                                                //- .password-wrap__descr Длина пароля не менее 6 символов
                                                .password-wrap__show-pass.js-show-pass
                                                    .password-wrap__show-pass-icon.password-wrap__show-pass-icon--show.hidden
                                                        +icon('i-show-pass-show')(style="width: 16px; height:16px")
                                                    .password-wrap__show-pass-icon.password-wrap__show-pass-icon--hide
                                                        +icon('i-show-pass-hide')(style="width: 16px; height:16px")
                                        .col-md-5
                                            .password-wrap
                                                +input({
                                                    label: 'Повторите пароль',
                                                    fg_mod: 'form-group--margin',
                                                    type: 'password',
                                                    name: false,
                                                    small: false,
                                                    required: true,
                                                    validation: {
                                                        message: 'Заполните поле',
                                                        regexp: 'Неверный формат',
                                                        emailaddress: ' ',
                                                        identical: false
                                                    }
                                                })
                                                .password-wrap__show-pass.js-show-pass
                                                    .password-wrap__show-pass-icon.password-wrap__show-pass-icon--show.hidden
                                                        +icon('i-show-pass-show')(style="width: 16px; height:16px")
                                                    .password-wrap__show-pass-icon.password-wrap__show-pass-icon--hide
                                                        +icon('i-show-pass-hide')(style="width: 16px; height:16px")
                                .personal-form__submit
                                    button(type="submit").btn.btn--primary
                                        span Применить
                                    a(href='#').personal-password__revise.link-decoration.link-decoration--primary Забыли пароль?
        .tabs-content(data-tab-content="2").hidden
            .personal-contaniner
                form.bv-form.personal-form
                    .row
                        .col-md-5
                            .personal-address
                                +input({
                                    fg_mod: '',
                                    mod: 'dirty',
                                    type: 'text',
                                    name: false,
                                    small: false,
                                    label: 'Адрес',
                                    required: true,
                                    value: 'Беларусь, Минск, Проспект Скорыны 321-11',
                                    validation: {
                                        message: 'Заполните поле',
                                        regexp: 'Неверный формат',
                                        emailaddress: ' ',
                                        identical: false
                                    }
                                })(disabled)
                                .personal-address__control
                                    .personal-address__change
                                        +icon('i-change')(style="width: 24px; height: 24px")
                                    .personal-address__delete
                                        +icon('i-delete')(style="width: 24px; height: 24px")
                    .row
                        .col-md-5
                            .personal-address__add.link-decoration.link-decoration--primary(data-toggle="modal" data-target="#modal-addAddress") Добавить адрес +
                    //- .personal-form__submit
                    //- 	button(type="submit").btn.btn--primary
                                span Сохранить