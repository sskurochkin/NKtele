mixin include-style(name)
	-
		isInComponentsList(componentsList, name);
mixin include-style-mod(name, modName)
	-
		isInComponentsModList(componentsModList, name, modName);
mixin include-script(name, ignore)
	if (!ignore)
	-
		isInComponentsList(componentsScriptsList, name);

mixin include-script-vendor(name)
	-
		isInComponentsList(vendorScriptsList, name);
mixin include-style-ajax(name)
	link(rel="stylesheet" href="../../../local/templates/html/components-template/" + name + "/style.css" inline)
mixin include-script-ajax(name)
	script(src="../../../local/templates/html/components-template/" +name + "/script.min.js" inline)
